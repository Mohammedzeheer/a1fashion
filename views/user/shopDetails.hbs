<script src="https://cdn.jsdelivr.net/npm/sweetalert@2"></script>
<script>
  function addToCart(productId) {
    swal({
      title: "Add to Cart?",
      icon: "success",
      buttons: ["Cancel", "Add"],
      dangerMode: true,
    })
    .then((willAdd) => {
      if (willAdd) {
        window.location.href = "/addToCart?id=" + productId;
      }
    });
  }
</script>