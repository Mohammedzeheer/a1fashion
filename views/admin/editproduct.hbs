


        <!-- Add Product -->

        <div class="container">
            <div class="row ">
                <div class="col-lg-10 col-md-8 ml-auto">
                    <div class="row align-items-center pt-md-5 mt-5 mb-5">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-title text-center mt-3">
                                    <h3>Edit Product</h3>
                                </div>
                                <div class="card-body">
                                    <form action="/updateproduct/{{id}}" enctype="multipart/form-data"  method="post">
                                        <div class="form-group">
                                            <label for="productname">Product Name:</label>
                                            <input type="text" class="form-control" name="productname" value="{{editproductdata.productname}}">
                                        </div>

                                        <div class="form-group">
                                            <label for="stock">Stock</label>
                                            <input type="text" class="form-control" name="stock" value="{{editproductdata.stock}}">
                                        </div>

                                        <div class="form-group">
                                            <label for="productbrand">Product Brand</label>
                                            <input type="text" class="form-control" name="productbrand" value="{{editproductdata.productbrand}}">
                                               
                                        </div>

                                        <div class="form-group">
                                            <label for="productprice">Product Price</label>
                                            <input type="text" class="form-control" name="productprice" value="{{editproductdata.productprice}}">
                                        </div>



                                        <div class="form-group">
                                            <label for="productcategory">Product Category</label>

                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <label class="input-group-text"
                                                        for="inputGroupSelect01">Category</label>
                                                </div>

                                                <select class="custom-select" id="inputGroupSelect01"
                                                    name="categoryname" value="{{editproductdata.categoryname}}" >
                                                    <option selected></option>
                                                    {{#each categorydropdown}}
                                                    {{#if status}}
                                                    <option >{{categoryname}}</option>
                                                    {{/if}}
                                                    {{/each}}
                                                </select>
                                            </div>
                                            {{!-- <p style="font-weight: 600; font-size: 15px" id="error-message" class="text-danger"></p> --}}
                                        </div>

                                        <div class="form-group">
                                            <label for="productbrand">Description</label>
                                            <input type="text" class="form-control" name="description" value="{{editproductdata.description}}">                                       
                                        </div>
                                         

                <div class="card-body p-5 "> 
                  <h6 class="mb-">Product Images</h6>
                <img class="mb-1" src="/productimage/{{editproductdata.productimage.[0]}}" style="width: 150px;" alt="">
                <img class="mb-1" src="/productimage/{{editproductdata.productimage.[1]}}" style="width: 150px;" alt="">
                <img src="/productimage/{{editproductdata.productimage.[2]}}" style="width: 150px;" alt="">
                <img src="/productimage/{{editproductdata.productimage.[3]}}" style="width: 150px;" alt="">
                </div>

                                        <p>Product Image:</p>
                                        <div class="custom-file">
                                            <input type="file" multiple class="custom-file-input" name="productimage" value="{{editproductdata.productimage}}">
                                            <label class="custom-file-label" for="productimage"></label>
                                        </div>

                                        <button class="btn btn-dark mt-5 mx-auto d-block btn-sm"
                                            type="submit">Update</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>




      