<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2 class="text-center text-dark mt-5">Add User</h2>
      {{!-- <div class="text-center mb-5 text-dark">Made with bootstrap</div> --}}
      <div class="card my-5">

        <form action="adminuseradd" method="post" class="card-body cardbody-color p-lg-5">

          <div class="mb-3">
            <input type="text" name="name" class="form-control" id="Username" aria-describedby="emailHelp"
              placeholder="User Name">
          </div>

          <div class="mb-3">
            <input type="text" name="phonenumber" class="form-control" placeholder="Phone number">
          </div>

          <div class="mb-3">
            <input type="text" name="email" class="form-control" placeholder="Email">
          </div>

          <div class="mb-3">
            <input type="password" name="password" class="form-control" id="password" placeholder="password">
          </div>

          <div class="text-center"><button type="submit" class="btn btn-color px-5 mt-3 mb-5 w-100">create</button>
          </div>

          <a style="color:red">{{msg}}</a>
        </form>
      </div>

    </div>
  </div>
</div>


<style>
  .btn-color {
    background-color: #0e1c36;
    color: #fff;

  }

  .profile-image-pic {
    height: 200px;
    width: 200px;
    object-fit: cover;
  }



  .cardbody-color {
    background-color: #ebf2fa;
  }

  a {
    text-decoration: none;
  }
</style>