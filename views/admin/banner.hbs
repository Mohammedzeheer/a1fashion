<div class="content-page">
    <div class="table-title">
        <div class="row">
            <div class="col-sm-10">
                <h4>Banner <b>Details</b></h4>
            </div>
            <div class="col-sm-2">
                <button type="button" class="btn btn-info add-new btn-sm m-2"><i class="fa fa-plus"></i><a
                        style="color:white" href="/addBannerGet">Add New</a></button>
            </div>
        </div>
    </div>



    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                {{!-- <div style="height: 400px; overflow-y: scroll;"> --}}
                    <table id="datatable" class="table data-table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Banner Image</th>
                                <th>Season Title</th>
                                <th>Title</th>
                                <th>Description</th>       
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            {{#each bannerTable}}
                            <tr>         
                                {{!-- <td>{{bannerimage}}</td> --}}
                                <td><img style="width:200px; height: 150px;" src="/productimage/{{bannerimage.[0]}}"
                                    alt=""></td>
                                <td>{{seasontitle}}</td>
                                <td>{{title}}</td>
                                <td>{{description}}</td>                               
                                <td>{{status}}</td>

                             
                                <td>
                                    {{!-- <a class="edit" href="/editCoupon/{{_id}}"><i class="material-icons">&#xE254;</i></a> --}}
                                    <a class="delete" href="/deleteBanner/{{_id}}" onclick="return confirm('Do you want to delete product')"><i
                                            class="material-icons">&#xE872;</i></a>
                                </td>
                            </tr>
                            {{/each}}
                    </table>
                {{!-- </div> --}}
            </div>
        </div>
    </div>
</div>
